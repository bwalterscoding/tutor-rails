<p id="notice"><%= notice %></p>

<h1>Class Reports</h1>

<table>
 <tr>
  <th>Student Name</th>
  <th>Level</th>
  <th>Class Notes</th>
  <th>User</th>
 </tr>
 <% @class_report.each do |class_report| %>
 <tr>
  <td><%= class_report.student_name %></td>
  <td><%= class_report.student_level %></td>
  <td><%= class_report.class_notes %></td>
  <td><%= class_report.user_id %></td>
  <td><%= link_to 'Edit', edit_class_report_path(class_report) %></td>
  <td><%= link_to 'Show', class_report_path(class_report) %></td>
  <td><%= link_to 'Delete', class_report_path(class_report), method: :delete, data: {confirm: "Are you sure?"} %></td>
 </tr>
 <% end %>
</table>

<br>

<%= link_to 'New Class Report', new_class_report_path %><br>
